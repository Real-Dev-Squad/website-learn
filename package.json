{
  "name": "learn-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "serve": "vite preview",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "prepare": "husky install .husky"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "vue": "^3.2.37",
    "vue-router": "^4.0.0-0",
    "vuex": "^4.0.0-0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^3.0.3",
    "autoprefixer": "^9",
    "eslint": "^8.22.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-vue": "^9.4.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^7",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "vite": "^3.0.9"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/vue3-essential"
    ],
    "rules": {
      "linebreak-style": 0,
      "vue/no-unused-components": 0,
      "import/no-extraneous-dependencies": 0,
      "vue/multi-word-component-names": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,vue}": [
      "yarn lint",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
